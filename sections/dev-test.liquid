<h1 class="compare-products__title">{{ section.settings.title }}</h1>
<p class="compare-products__subtitle">{{ section.settings.subtitle }}</p>
<div class="compare-products__hyperlink">
  <a href="{{  section.settings.hyperlink }}">See all models</a>
</div>

<div class="compare-products__card-wrapper">
  <div class="compare-products__card">
    <select onchange="onVariantChange(1, this.value)">
      {% for variant in section.settings.product.variants %}
        <option value="{{ forloop.index }}">{{ variant.title }}</option>
      {% endfor %}
    </select>

    <img
      class="compare-products__card__image"
      width="342"
      height="195"
      id="product-img-1"
    >

    <p class="compare-products__card__title" id="product-title-1">Product Title</p>

    <p class="compare-products__card__subtitle" id="product-subtitle-1">Product Subtitle</p>

    <div class="compare-products__card__savings">
      <p>Savings value</p>
    </div>

    <div class="compare-products__card__prices">
      <span class="compare-products__card__price-min">123</span>
      <span class="compare-products__card__price-max">321</span>
    </div>

    <a href="#" class="compare-products__buy-btn">
      <p>Buy now</p>
    </a>

    <hr>

    <hr>

    <a href="#" class="compare-products__buy-btn">
      <p>Buy now</p>
    </a>
  </div>
</div>

<script>
  {%- assign firstAvailableVariant = section.settings.product.selected_or_first_available_variant -%}
  const variants = {{ section.settings.product.variants | json }};

  document.getElementById("product-title-1").innerText = "{{ firstAvailableVariant.title }}";
  document.getElementById("product-img-1").src = "{{ firstAvailableVariant.featured_image.src | img_url:  "342x195",  crop: 'center'  }}"

  function onVariantChange(cardNumber, index){
    document.getElementById("product-title-" + cardNumber).innerText = variants[index - 1].title;
    document.getElementById("product-img-1").src = variants[index - 1].featured_image.src.replace(/(.*)\.jpg(.*)/, "$1_342x195_crop_center.jpg$2");
  }
</script>

{% stylesheet %}
  .compare-products {
    letter-spacing: -0.01em;
    padding-bottom: 70px;
  }

  .compare-products__title {
    font-size: 48px;
    font-weight: 700;
    line-height: 57px;

    margin: 112px 0 21px;
  }

  .compare-products__subtitle {
    font-size: 20px;
    font-weight: 400;
    line-height: 29px;
    opacity: 60%;

    margin-bottom: 17px;
  }

  .compare-products__hyperlink {
    display: flex;
    justify-content: center;

    font-size: 14px;
    font-weight: 700;
    line-height: 17px;
  }

  .compare-products__subtitle,
  .compare-products__title,
  .compare-products__hyperlink,
  .compare-products__card__title,
  .compare-products__card__subtitle,
  .compare-products__card__prices {
    text-align: center;
    color: #252525;
  }

  .compare-products__card-wrapper {
    margin-top: 60px;
    justify-content: center;
  }

  .compare-products__card {
    max-width: 400px;

    select {
      font-size: 17px;
      font-weight: 700;
      line-height: 60px;
      text-align: left;

      width: 400px;

      background-color: unset;

      border: 1px solid #dedede;
      border-radius: 8px;
      padding: 18px 20px;
    }
  }

  .compare-products__card {
    flex-flow: column;
    align-items: center;

    hr {
      border-bottom: 1px solid #dedede;
      width: 100%;
      margin: 46px 0;
    }
  }

  .compare-products__card__image {
    margin-top: 40px;
  }

  .compare-products__card,
  .compare-products__card-wrapper {
    display: flex;
  }

  .compare-products__card__title {
    font-size: 26px;
    font-weight: 700;
    line-height: 32px;

    margin: 75px 0 0;
  }

  .compare-products__card__subtitle {
    font-size: 17px;
    font-weight: 400;
    line-height: 24px;
    opacity: 60%;

    margin: 5px 0 0;
  }

  .compare-products__card__savings {
    background: #4062ff;
    border-radius: 2px;
    border: 1px solid #4062ff;
    padding: 4px 9px;
    margin-top: 18px;

    font-size: 12px;
    font-weight: 700;
    line-height: 17px;
    text-align: center;

    color: #fff;
  }

  .compare-products__card__prices {
    font-size: 17px;

    line-height: 24px;
    margin: 8px 0 0;
  }

  .compare-products__card__price-min {
    font-weight: 700;
  }

  .compare-products__card__price-max {
    opacity: 60%;
    font-weight: 400;
    text-decoration: line-through;
  }

  .compare-products__buy-btn {
    background: #252525;
    border: 0 solid #252525;
    border-radius: 200px;
    padding: 18px 30px;
    margin: 40px 0 0;

    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    line-height: 17px;
    text-align: center;
    color: #fff;
    letter-spacing: -0.5%;
  }

  .compare-products__buy-btn,
  .compare-products__card__savings {
    p {
      margin: 0;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Compare Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Sample title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Sample subtitle"
    },
    {
      "type": "url",
      "id": "hyperlink",
      "label": "Hyperlink",
      "default": "/collections"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Battalion Section Test"
    }
  ],
  "class": "compare-products"
}
{% endschema %}
